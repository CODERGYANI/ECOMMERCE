<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Order Confirmation</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Playfair+Display:wght@500;700&display=swap');

    :root {
      --bg: #f8f6f2;
      --fg: #1e1b16;
      --muted: #6b675f;
      --card: #ffffff;
      --accent: #c9a857;
    }

    * { box-sizing: border-box; }
    html, body { height: 100%; }
    body {
      font-family: 'Inter', system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
      color: var(--fg);
      background: var(--bg);
      margin: 0;
      padding: 20px;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      line-height: 1.55;
    }

    .container {
      background: var(--card);
      border-radius: 16px;
      max-width: 860px;
      margin: 0 auto;
      padding: 28px;
      border: 1px solid rgba(30,27,22,0.12);
      box-shadow:
        0 1px 2px rgba(30,27,22,0.04),
        0 8px 24px rgba(30,27,22,0.08);
      overflow-x: auto;
    }

    h2 {
      font-family: 'Playfair Display', Georgia, 'Times New Roman', serif;
      font-weight: 700;
      font-size: 28px;
      letter-spacing: 0.2px;
      margin: 0 0 16px 0;
      color: var(--fg);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 12px;
      min-width: 640px;
    }

    th, td {
      text-align: center;
      padding: 14px 12px;
      border-bottom: 1px solid rgba(30,27,22,0.08);
      color: var(--fg);
      font-size: 14px;
    }

    th {
      background: rgba(30,27,22,0.04);
      color: var(--fg);
      font-weight: 600;
    }

    th:first-child,
    td:first-child { text-align: left; }

    tbody tr:hover { background: rgba(30,27,22,0.03); }

    .total-section {
      text-align: right;
      margin-top: 20px;
      font-size: 16px;
      color: var(--muted);
    }
    .total-section p { margin: 6px 0; }
    .total-section p strong { color: var(--fg); font-weight: 600; }
    .total-section p:last-child strong { color: var(--accent); }

    .btn {
      display: inline-block;
      background: var(--accent);
      color: #1e1b16;
      padding: 12px 22px;
      border: 1px solid rgba(30,27,22,0.10);
      border-radius: 999px;
      text-decoration: none;
      font-weight: 600;
      letter-spacing: 0.2px;
      margin-top: 18px;
      cursor: pointer;
      box-shadow:
        0 1px 0 rgba(30,27,22,0.06),
        0 6px 16px rgba(30,27,22,0.12);
      transition: transform 180ms ease, box-shadow 180ms ease, filter 180ms ease;
    }

    .btn:hover {
      filter: brightness(0.95);
      transform: translateY(-1px);
      box-shadow:
        0 2px 0 rgba(30,27,22,0.06),
        0 10px 22px rgba(30,27,22,0.16);
    }

    .btn:active {
      transform: translateY(0);
      box-shadow:
        0 1px 0 rgba(30,27,22,0.06),
        0 6px 16px rgba(30,27,22,0.12);
    }

    .btn:focus-visible {
      outline: 3px solid rgba(201,168,87,0.45);
      outline-offset: 2px;
    }

    @media (max-width: 640px) {
      body { padding: 16px; }
      .container { padding: 20px; }
      h2 { font-size: 24px; }
      th, td { padding: 12px 10px; font-size: 13px; }
      .total-section { font-size: 15px; }
      .btn { width: 100%; text-align: center; }
    }

    @media (prefers-reduced-motion: reduce) { .btn { transition: none; } }
  </style>
</head>
<body>
  <div class="container">
    <h2>ðŸ§¾ Order Confirmation</h2>

    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price (â‚¹)</th>
          <th>Qty</th>
          <th>Discount (%)</th>
          <th>Total (â‚¹)</th>
        </tr>
      </thead>
      <tbody>
        <% 
          let subtotal = 0;
          let discountAmt = 0;

          products.forEach(p => {
           
            let price = Number(p.price) || 0;
            let quantity = Number(p.quantity) || 1;
            let discount = Number(p.discount) || 0;

            let itemTotal = price * quantity;
            let itemDiscount = discount;

            subtotal += itemTotal;
            discountAmt += itemDiscount;
        %>
          <tr>
            <td><%= p.name %></td>
            <td><%= price %></td>
            <td><%= quantity %></td>
            <td><%= discount %></td>
            <td><%= (itemTotal - itemDiscount).toFixed(2) %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>

    <div class="total-section">
  <p><strong>Subtotal:</strong> â‚¹<%= subtotal.toFixed(2) %></p>
  <p><strong>Total Discount:</strong> â‚¹<%= discountAmt.toFixed(2) %></p>
  <p><strong>Final Payable:</strong> â‚¹<%= (subtotal - discountAmt).toFixed(2) %></p>
</div>


    <form action="/payment" method="POST">
      <input type="hidden" name="amount" value="<%= (subtotal - discountAmt).toFixed(2) %>">
      <button type="submit" class="btn">Proceed to Payment</button>
    </form>
  </div>
</body>
</html>
